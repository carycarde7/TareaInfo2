<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaInfo.VIews.Resultados">
    <ContentPage.Content>
        <StackLayout BackgroundColor="DarkGray">

            <Frame BackgroundColor="LightSlateGray" Padding="10" CornerRadius="0">
                <Label Text="Resultado" HorizontalTextAlignment="Center" TextColor="White" FontSize="15"/>
            </Frame>

            <Label Text="{Binding nombre}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand"/>
            
            <Label Text="{Binding apellido}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand"/>

            <Label Text="{Binding edad}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand"/>

            <Label Text="{Binding correo}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>