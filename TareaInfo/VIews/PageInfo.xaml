<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaInfo.VIews.PageInfo">
    <ContentPage.Content>
        <StackLayout BackgroundColor="DarkGray">

            <Entry x:Name="txtnombre" Placeholder="Ingrese su nombre" Keyboard="Text"/>

            <Entry x:Name="txtapellido" Placeholder="Ingrese su apellido" Keyboard="Text"/>

            <Entry x:Name="txtedad" Placeholder="Ingrese su edad" Keyboard="Numeric"/>

            <Entry x:Name="txtcorreo" Placeholder="Ingrese su correo electronico" Keyboard="Email"/>

            <Button x:Name="btnmostrar" Text="Enviar Información" Clicked="btnmostrar_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>